<% include partials/header %>

    <div id="topdiv" class="text-shadow">
        <i class="fa fa-ticket"> E-Ticketing Next</i>
    </div>
    <div id="logindiv" class="box-shadow">
        <form action="/login" method="POST">
            <div id="login_title">
                <span class="text-shadow">Sign In</span>
            </div> 
            <div class="ui input">
                <input id="username" name="username" type="text" placeholder="username" class="" pattern="^\S{6,}$" title="Username must be at 6 characters" required>
            </div>     
            <div class="ui input">
                <input id="password" name="password" type="password" placeholder="password" class="" pattern="^\S{8,}$" title="Password must be at least 8 characters" required>
            </div>      
            <button id="submitbtn" class="ui button">Sign In <i class="fa fa-sign-in" aria-hidden="true"></i></button>   
        </form>   
    </div> 
    <div id="bottomdiv" class="text-shadow">
        <a id="reglink" href="#"><i class="fa fa-user-plus" aria-hidden="true"> Sign Up Now</a></i>
    </div>
    
<% include partials/footer %>